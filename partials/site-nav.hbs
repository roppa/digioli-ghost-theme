<nav class="navbar is-white" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a id="logo" class="navbar-item" title="{{@blog.title}}" href="{{@blog.url}}">
      {{#if @blog.logo}}
        <img width="150px" src="{{@blog.logo}}" alt="{{@blog.title}}" />
      {{else}}
        {{@blog.title}}</a>
      {{/if}}
    </a>
    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="main-menu">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>
  <div id="main-menu" class="navbar-menu">
    <div class="navbar-start">
      {{#if @blog.navigation}} {{navigation}} {{/if}}
    </div>
    <div class="navbar-end">
      <ul class="navbar-item">
        {{#if @blog.github}}
          <li class="icon is-large">
            <a class="social-link social-link-fb" href="{{github_url @blog.github}}" target="_blank" rel="noopener">
              <i class="fab fa-github"></i>
            </a>
          </li>
        {{/if}}
        {{#if @blog.twitter}}
            <li class="icon is-large">
              <a class="social-link social-link-tw" href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">
                <i class="fab fa-twitter-square" aria-hidden></i>
              </a>
            </li>
        {{/if}}
          <li class="icon is-large">
            <a class="rss-button" href="https://feedly.com/i/subscription/feed/{{@blog.url}}/rss/" target="_blank" rel="noopener">
              <i class="fas fa-rss-square" aria-hidden></i>
            </a>
          </li>
        {{#if @labs.subscribers}}
          <li>
            <a class="subscribe-button" href="#subscribe">Subscribe</a>
          </li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>
